#!/bin/bash
# Usage: webapp "App Name" "https://url.com" [window-size] [icon-name]

NAME="$1"
URL="$2"
SIZE="${3:-1200x800}"
ICON="${4:-applications-internet}"

# Convert 'x' format to ',' format for Edge
SIZE="${SIZE/x/,}"

# Check for Edge
if ! command -v microsoft-edge &> /dev/null; then
    echo "Microsoft Edge not found. Please install it first."
    exit 1
fi

microsoft-edge \
  --app="$URL" \
  --window-size="$SIZE" \
  &> /dev/null &
